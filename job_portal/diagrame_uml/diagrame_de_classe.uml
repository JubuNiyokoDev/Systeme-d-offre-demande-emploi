@startuml

class CustomUser {
    - username: str
    - email: str
    - password: str
    - is_recruiter: bool
    - is_banned: bool
    + ban_user()
    + unban_user()
}

class JobOffer {
    - title: str
    - company: str
    - description: text
    - location: str
    - salary_range: int
    - status: str
    - created_at: datetime
    - expires_at: datetime
    + is_expired(): bool
    + has_user_applied(user): bool
}

class JobApplication {
    - status: str
    - applied_at: datetime
    - cover_letter: text
    + update_status(new_status)
}

CustomUser "1" -- "*" JobOffer : publishes >
CustomUser "1" -- "*" JobApplication : submits >
JobOffer "1" -- "*" JobApplication : receives >

@enduml